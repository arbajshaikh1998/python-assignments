              l = strlen(string1);

              for(i=0;i < l ;i++){
                  if(string1[i] != string1[l-i-1]){
                      temp= 1;
                      break;
             }
          }

              if (temp) {
                  printf("%s is not a palindrome", s);
              }    
              else {
                  printf("%s is a palindrome", s);
              }
              return 0;
          }
