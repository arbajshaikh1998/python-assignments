# program for reverse the given array
            from array import *
            A=array('i',[1,2,3,4,5])
            B=A[::-1]
            print(B)
# program for remove the duplicates elements in the given array
            a=[1,2,3,4,5,5,5,5,6]
            print("before the removing duplicate elements from list",a)
            print("after removing duplicats elements")
            s=[]
            for i in a:
               if i not in s:
                   s.append(i)
            print(s)
# program for printing second largest number from given array
            from array import *
            x=array('i',[])
            print("how many elements do you enter")
            n=int(input())

            for i in range(n):
                print("Enter the elements",end=" ")
                x.append(int(input()))
            print("array is :",x)
            s=sorted(x)
            # list=s.tolist()
            print(s)
            print("Your second highest number is:")
            print(s[-2])
# program for sum and avg for array
            from array import *
            x=array('i',[])
            print("how many elements do you enter")
            n=int(input())

            for i in range(n):
                print("Enter the elements",end=" ")
                x.append(int(input()))
            print("array is :",x)

            sum=0
            s=x.tolist()
            l=len(s)
            for i in s:
                sum=sum+i
            print("sum is given as",sum)

            avg=sum/n
            print("Avg is given as",avg)
# program for checking given array is disjoint or not
              from array import *
              a=array('i',[1,2,3,4])
              b=array('i',[5,6,7,8])
              x=a.tolist()
              y=b.tolist()
              for i in range(0,len(x)):
                  for j in range(0,len(y)):
                      if x[i]==y[j]:
                          print("no")
                          break
              print("yes given array is disjoint")

